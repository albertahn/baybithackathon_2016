    <TextView
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Abe&apos;s Cafe"
        android:id="@+id/parkname_here"
        android:layout_alignParentTop="true"

        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Get Rewards!"
        android:id="@+id/reward_button"
        android:layout_alignBottom="@+id/fiftyfuller"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="58dp"
        android:layout_alignTop="@+id/fiftyfuller"
        android:layout_toEndOf="@+id/fiftyfuller" />

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:id="@+id/fiftyfuller"
        android:src="@drawable/fif"
        android:layout_below="@+id/parkname_here"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="5 More Coffees for a free cup!"
        android:id="@+id/big_text"
        android:layout_below="@+id/reward_button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="88dp"
        android:textColor="#020202" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="recieved 100 Satoshi&apos;s from Abe&apos;s Cafe"
        android:id="@+id/little_text"
        android:layout_below="@+id/big_text"
        android:layout_centerHorizontal="true"
        android:textColor="#020202" />


